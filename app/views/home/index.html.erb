<section class="space-y-6">
  <div class="surface-card">
    <h1 class="text-3xl font-semibold tracking-tight text-forest-900">Welcome</h1>

    <% if user_signed_in? %>
      <p class="mt-3 text-sage-500">Signed in as <%= current_identity.email %></p>
      <%= button_to "Sign out",
                    destroy_identity_session_path,
                    method: :delete,
                    class: "primary-btn mt-5" %>
    <% else %>
      <div class="mt-5 border-t border-forest-900/10 pt-5">
        <%= render "shared/auth/sign_in_form",
                   resource: Identity.new,
                   resource_name: :identity %>
      </div>
    <% end %>
  </div>
</section>
