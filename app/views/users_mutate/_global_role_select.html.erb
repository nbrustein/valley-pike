  <div class="space-y-2">
    <p class="text-sm font-semibold text-forest-900">Admin Role</p>
    <div class="space-y-2">
      <label class="flex items-center gap-2 text-sm text-forest-900" for="user_global_role_none">
        <input type="radio"
               name="user[global_role]"
               id="user_global_role_none"
               value=""
               required
               data-global-role>
        None
      </label>

      <% @roles_for_global_role_input.each do |role| %>
        <% input_id = "user_global_role_#{role}" %>
        <label class="flex items-center gap-2 text-sm text-forest-900" for="<%= input_id %>">
          <input type="radio"
                 name="user[global_role]"
                 id="<%= input_id %>"
                 value="<%= role %>"
                 required
                 data-global-role>
          <%= role.humanize %>
        </label>
      <% end %>
    </div>
  </div>
